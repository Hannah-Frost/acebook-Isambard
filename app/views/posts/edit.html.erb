<div id="login-background">
  <div class="login-form-container">
    <%= form_for Post.find(params[:id]) do |form| %>
      <%= form.text_area :message, class: "form-field", id: "namebox", value: "#{Post.find(params[:id]).message}"%>
      <br>
        <%= form.submit "Submit", class: "button3" %>
    <% end %>
  </div>
</div>
