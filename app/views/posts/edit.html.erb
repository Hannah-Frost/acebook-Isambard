<div class="fb-body-posts">
  Edit your post:
  <br>
  Original Message: <%= Post.find(params[:id]).message %>

  <%= form_for Post.find(params[:id]) do |form| %>

    <%= form.text_field :message, id: "namebox", value: "#{Post.find(params[:id]).message}" %>
    <br>
      <%= form.submit "Submit", class: "button2" %>
  <% end %>
</div>
