<!DOCTYPE html>
<html>
  <head>
    <title>Acebook</title>
    <%= favicon_link_tag asset_path('acebook_favicon2.png') %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="fb-header-base">
      <p>
      <% if user_signed_in? %>
        <div id="logged-in-text">
          <% if notice %><p><%= notice %></p>
          <% else %>Logged in as <%= current_user.username %>
          <% end %>
        </div>
        <div class="logout_edit_container">
        <%= link_to 'Edit profile', edit_user_registration_path, class: 'button-header'  %> 
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'button-header', id: "logout-button"   %>
        </div>
      <% else %>
        <%= link_to "Login", new_user_session_path, class: 'button-header' %>
      <% end %>
      </p>
    </div>
    <div class="fb-header"><span id="fb-header-font">Acebook</span></div>

    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
